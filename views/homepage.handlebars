<form class="signup-form">
  <h5>Create an account.</h5>
  <div>
    <label for="fullname-signup">Full Name:</label>
    <input type="text" id="name-signup" class="form-control" placeholder="Jane Doe"/>
  </div>
  <div>
    <label for="email-signup">Email:</label>
    <input type="text" id="email-signup" class="form-control"/>
  </div>
  <div>
    <label for="password-signup">Password:</label>
    <input type="password" id="password-signup" class="form-control"/>
  </div>

  <legend><h5>What is your oil type?</h5></legend>
    <div class="form-check">
      <input type="radio" name="oilRadios" id="conv-radio" value="Conventional" checked>
      <label class="form-check-label" for="conv-radio">
        Conventional
      </label>
    </div>

    <div class="form-check">
      <input type="radio" name="oilRadios" id="synth-radio" value="Synthetic">
      <label class="form-check-label" for="synth-radio">
        Synthetic
      </label>
    </div>

  <div>
    <button id="signup" class="btn btn-danger">Signup</button>
  </div>
</form>
