<main class="main col-8">
    <h4>
        <input id="query-name" type="text" placeholder="Query Name" />
        <button id="new">+ New</button>
    </h4>
    <textarea placeholder="SQL code" id="query"></textarea>
    <button id="save-query">
        Save and execute
    </button>
    <section>
        <h4>Results</h4>
        <textarea id="results">Beans</textarea>
    </section>
